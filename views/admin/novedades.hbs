<div class="container" style="margin-top: 50px;">
  {{! -- fila 1 -- }}
  <div class="row">
    <div class="col">
      <p class="text-end">
        <span>Hola {{usuario}}</span>
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesion
          <i class="fas fa-sign-out-alt"></i>
        </a>
      </p>
    </div>
  </div>
  {{! -- fin fila 1 -- }}
  {{! -- fila 2 -- }}

  <div class="row">
    <div class="col-7" style="margin-top: -9px;">
      <h2>Listado de novedades</h2>
    </div>
    <div class="col-5 text-right">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i
          class="fas fa-plus"
        ></i>Nuevo</a>
    </div>
  </div>
  {{! -- fin fila 2 -- }}

  {{! -- fila 3 -- }}
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">TÃ­tulo</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{id}}</th>
              <td>{{titulo}}</td>
              <td class="text-center">
                <a href="#" class="btn btn-sm btn-secondary">
                  <i class="fa fa-pencil"></i>
                </a>
                <a
                  href="/admin/novedades/eliminar/{{id}}"
                  class="btn btn-sm btn-secondary"
                >
                  <i class="fa fa-trash"></i>
                </a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  {{! -- fin fila 3 -- }}
</div>